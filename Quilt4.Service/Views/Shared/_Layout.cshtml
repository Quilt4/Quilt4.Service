@using System
@using Quilt4.Service.Logging
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="~/"><img height="46" src="~/Images/Quilt4.png" /></a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("WebAPI", "Index", "Help", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @{
            //Checking if it is possible to log data to the event log
            var serviceLog = new EventLogger();
            Exception exception;
            var canWriteToLog = serviceLog.CanWriteToLog(out exception);
            if (!canWriteToLog)
            {
                <p style="background-color: pink;">Cannot access the event log. Run this service with elevated priviligues once, so that a section for the event log can be created.</p>
            }

            var logEntries = serviceLog.GetAllLogEntries().Where(x => x.Level != "Information").ToArray();
            @Html.Raw("There are " + logEntries.Length + " entries in the event log.")
        }

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Quilt4 Service</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
