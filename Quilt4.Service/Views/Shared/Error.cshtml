@using Quilt4.Service.Interface.Business
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>Error</title>
</head>
<body>
<hgroup>
    <h1>Error.</h1>
    <h2>An error occurred while processing your request.</h2>
</hgroup>
@try
{
    WebApiApplication.LogException(Model.Exception, LogLevel.Error);
}
catch (Exception exception)
{
    @Html.Raw("Error in the error handler. " + exception.Message);
    @Html.Raw("Original error. " + Model.Exception);
}
</body>
</html>